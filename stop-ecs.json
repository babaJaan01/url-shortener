{
  "Name": "urlshortener-stop-ecs-nightly",
  "ScheduleExpression": "cron(45 22 * * ? *)",
  "ScheduleExpressionTimezone": "America/Los_Angeles",
  "State": "ENABLED",
  "FlexibleTimeWindow": { "Mode": "OFF" },
  "Target": {
    "Arn": "arn:aws:scheduler:::aws-sdk:ecs:updateService",
    "RoleArn": "arn:aws:iam::022499002705:role/urlshortener-scheduler-role",
    "Input": "{\"cluster\":\"urlshortener-cluster\",\"service\":\"urlshortener-service\",\"desiredCount\":0}"
  }
}
